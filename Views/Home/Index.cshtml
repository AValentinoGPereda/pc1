<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <title>Pago con Tarjeta</title>
  </head>
  <body>
    <h1>Pago con Tarjeta</h1>
    <form action="procesar_pago.php" method="post">
      <label for="numero_tarjeta">Número de Tarjeta:</label>
      <input type="text" id="numero_tarjeta" name="numero_tarjeta" required>

  <label for="fecha_pago">Fecha de Pago:</label>
  <input type="date" id="fecha_pago" name="fecha_pago" required>

  <label for="monto">Monto:</label>
  <input type="number" id="monto" name="monto" required>

  <label for="total">Total a pagar:</label>
  <input type="text" id="total" name="total" readonly>

  <input type="submit" value="Realizar Pago">
</form>

<script>
  function calcularTotal() {
    const monto = document.getElementById("monto").value;
    const fechaPago = new Date(document.getElementById("fecha_pago").value);
    const hoy = new Date();
    const diasDiferencia = Math.ceil((hoy - fechaPago) / (1000 * 60 * 60 * 24));
    const porcentaje = diasDiferencia * 0.005;
    const total = monto * (1 + porcentaje / 100);
    document.getElementById("total").value = total;
  }

  document.getElementById("monto").addEventListener("input", calcularTotal);
  document.getElementById("fecha_pago").addEventListener("input", calcularTotal);
</script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>